{%- paginate collection.products by 9999 -%}

    {%- if collection.image -%}
        <div id="collection-image">
            {{ collection.image | image_url: width: '1440' | image_tag }}
        </div>
    {%- endif -%}

    <h1>{{ collection.title }}</h1>

    <div class="collection-description">
        {{ collection.description }}
    </div>

    <div class="collection-sorting">
        <h4>{{ 'collection.sort.title' | t }}</h4>

        <ul>
            {%- for option in collection.sort_options -%}
                {%- if option.value contains 'price-' -%}
                    <li>
                        <a class="{% if collection.sort_by == option.value %}active{% endif %}"
                            href="?sort_by={{ option.value }}"
                            >
                            {%- if option.name contains 'ascending' -%}
                                {{ 'collection.sort.price_low_high' | t }}
                            {%- else -%}
                                {{ 'collection.sort.price_high_low' | t }}
                            {%- endif -%}
                        </a>
                    </li>
                {%- endif -%}
            {%- endfor -%}
        </ul>

        {%- if collection.sort_by -%}
            <a href="{{ collection.url }}">{{ 'collection.sort.clear' | t }}</a>
        {%- endif -%}
    </div>

    {%- for product in collection.products -%}
        {% render 'product-card', product: product %}
    {%- endfor -%}
{%- endpaginate -%}